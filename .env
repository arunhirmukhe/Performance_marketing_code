# ─── FAGE Environment Variables ─────────────────────────────────

# Application
APP_NAME="FAGE - Fibonce Autonomous Growth Engine"
DEBUG=false

# Database
DATABASE_URL=postgresql+asyncpg://fage_user:fage_password@postgres:5432/fage_db
DATABASE_URL_SYNC=postgresql://fage_user:fage_password@postgres:5432/fage_db

# JWT
JWT_SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3001

# ─── Meta / Facebook Ads ────────────────────────────────────────
META_APP_ID=PLACEHOLDER_ID
META_APP_SECRET=PLACEHOLDER_SECRET
META_REDIRECT_URI=http://localhost:8001/api/ad-accounts/meta/callback

# ─── Google Ads ──────────────────────────────────────────────────
GOOGLE_CLIENT_ID=PLACEHOLDER_ID
GOOGLE_CLIENT_SECRET=PLACEHOLDER_SECRET
GOOGLE_DEVELOPER_TOKEN=PLACEHOLDER_TOKEN
GOOGLE_REDIRECT_URI=http://localhost:8001/api/ad-accounts/google/callback

# ─── Google Analytics 4 ─────────────────────────────────────────
GA4_PROPERTY_ID=

# ─── Redis ───────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ─── Email Alerts ────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_FROM_EMAIL=alerts@fibonce.com
ALERT_TO_EMAILS=

# ─── Slack Alerts ────────────────────────────────────────────────
SLACK_WEBHOOK_URL=

# ─── Optimization Thresholds ────────────────────────────────────
DEFAULT_ROAS_THRESHOLD=3.0
DEFAULT_CPA_THRESHOLD=50.0
DEFAULT_CTR_THRESHOLD=0.008
DEFAULT_FREQUENCY_THRESHOLD=3.0
BUDGET_INCREASE_PCT=0.20
BUDGET_DECREASE_PCT=0.15

# ─── PostgreSQL (used by docker-compose) ────────────────────────
POSTGRES_USER=fage_user
POSTGRES_PASSWORD=fage_password
POSTGRES_DB=fage_db
